@{
    // La propriété "Layout" définit la "page de disposition" du site.
    // La page de disposition contient la structure du site (entête, pied de page)
    // On indique le nom du fichier qui doit se trouver dans "Views/Shared/"
    Layout = "_Layout";


    // L'objet ViewBag permet de stocker des données directement accessibles dans les vues.
    ViewBag.Title = "Titre du site";


    // Les attributs sont crées dynamiquement (ici création d'un attribut "Author" dans le ViewBag)
    ViewBag.Author = "CRM";
}
